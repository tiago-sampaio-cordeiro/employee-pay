<div class="min-h-screen bg-gray-950 p-6">
  <div class="max-w-4xl mx-auto">
    <%# Header %>
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center gap-4">
        <%= link_to registers_path, class: "text-gray-500 hover:text-gray-300 transition-colors duration-200" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <p class="text-gray-500 text-xs uppercase tracking-widest mb-1">
            <%= @user.employee&.gender == "feminino" ? "Funcionária" : "Funcionário" %>
          </p>
          <h1 class="text-2xl font-bold text-white">
            <%= @user.first_name %> <%= @user.last_name %>
          </h1>
        </div>
      </div>
      <%= link_to edit_register_path(@user),
                  class: "flex items-center gap-2 px-4 py-2 rounded-xl text-sm font-medium border border-gray-700
                          text-gray-400 hover:border-gray-500 hover:text-gray-300 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
    </div>

    <%# Avatar e info principal %>
    <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6 mb-4">
      <div class="flex items-center gap-6">
        <div class="w-16 h-16 rounded-full bg-emerald-950 border border-emerald-800 flex items-center justify-center text-emerald-400 font-bold text-xl flex-shrink-0">
          <%= @user.first_name[0].upcase %><%= @user.last_name[0].upcase %>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-white font-semibold text-lg truncate"><%= @user.first_name %> <%= @user.last_name %></p>
          <p class="text-gray-500 text-sm truncate"><%= @user.email_address %></p>
          <div class="flex flex-wrap gap-2 mt-2">
            <% if @user.admin? %>
              <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-violet-950 text-violet-400 border border-violet-800">Admin</span>
            <% else %>
              <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-gray-700 text-gray-400 border border-gray-600">Funcionário</span>
            <% end %>
            <% if @user.active? %>
              <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-emerald-950 text-emerald-400 border border-emerald-800">Ativo</span>
            <% else %>
              <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-rose-950 text-rose-400 border border-rose-800">Inativo</span>
            <% end %>
            <% if @user.employee&.clt? %>
              <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-blue-950 text-blue-400 border border-blue-800">CLT</span>
            <% elsif @user.employee&.freelancer? %>
              <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-amber-950 text-amber-400 border border-amber-800">Freelancer</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">

      <%# Dados Pessoais %>
      <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6">
        <p class="text-xs font-medium text-emerald-500 uppercase tracking-widest mb-4">Dados Pessoais</p>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Data de Nascimento</span>
            <span class="text-white text-sm"><%= @user.employee&.birth_date&.strftime("%d/%m/%Y") || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Gênero</span>
            <span class="text-white text-sm capitalize"><%= @user.employee&.gender || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Nacionalidade</span>
            <span class="text-white text-sm capitalize"><%= @user.employee&.nationality || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Naturalidade</span>
            <span class="text-white text-sm"><%= [@user.employee&.city_born, @user.employee&.uf_born].compact.join(" / ").presence || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Nome da Mãe</span>
            <span class="text-white text-sm"><%= [@user.employee&.mother_name, @user.employee&.mother_last_name].compact.join(" ").presence || "—" %></span>
          </div>
          <div class="flex flex-col gap-1 pt-3 border-t border-gray-700">
            <span class="text-gray-500 text-xs uppercase tracking-wider">Telefone</span>
            <span class="text-white text-sm"><%= @user.employee&.phone_number || "—" %></span>
          </div>
          <div class="flex flex-col gap-1 pt-3 border-t border-gray-700">
            <span class="text-gray-500 text-xs uppercase tracking-wider">Contato de Emergência</span>
            <span class="text-white text-sm"><%= @user.employee&.emergency_phone_number || "—" %></span>
          </div>
          <div class="flex flex-col gap-1 pt-3 border-t border-gray-700">
            <span class="text-gray-500 text-xs uppercase tracking-wider">Chave PIX</span>
            <span class="text-white text-sm"><%= @user.employee&.pix_key || "—" %></span>
          </div>
        </div>
      </div>

      <%# Documentos %>
      <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6">
        <p class="text-xs font-medium text-emerald-500 uppercase tracking-widest mb-4">Documentos</p>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">CPF</span>
            <span class="text-white text-sm"><%= @user.employee&.cpf || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">RG</span>
            <span class="text-white text-sm"><%= @user.employee&.rg || "—" %></span>
          </div>
          <div class="flex flex-col gap-1 pt-3 border-t border-gray-700">
            <span class="text-gray-500 text-xs uppercase tracking-wider">Habilitação</span>
            <% if @user.employee&.driver_license %>
              <div class="space-y-1">
                <div class="flex justify-between">
                  <span class="text-gray-500 text-sm">Categoria</span>
                  <span class="text-white text-sm"><%= @user.employee&.driver_license_category || "—" %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-500 text-sm">Número</span>
                  <span class="text-white text-sm"><%= @user.employee&.driver_license_number || "—" %></span>
                </div>
              </div>
            <% else %>
              <span class="text-gray-600 text-sm">Não habilitado</span>
            <% end %>
          </div>
        </div>
      </div>

      <%# Saúde %>
      <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6">
        <p class="text-xs font-medium text-emerald-500 uppercase tracking-widest mb-4">Saúde</p>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Grupo Sanguíneo</span>
            <span class="text-white text-sm"><%= @user.employee&.blood_group || "—" %></span>
          </div>
          <div class="flex flex-col gap-1 pt-3 border-t border-gray-700">
            <span class="text-gray-500 text-xs uppercase tracking-wider">Alergias</span>
            <span class="text-white text-sm"><%= @user.employee&.allergies || "—" %></span>
          </div>
        </div>
      </div>

      <%# Endereço %>
      <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6">
        <p class="text-xs font-medium text-emerald-500 uppercase tracking-widest mb-4">Endereço</p>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">CEP</span>
            <span class="text-white text-sm"><%= @user.employee&.cep || "—" %></span>
          </div>
          <div class="flex flex-col gap-1">
            <span class="text-gray-500 text-sm">Rua</span>
            <span class="text-white text-sm"><%= @user.employee&.address || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Número</span>
            <span class="text-white text-sm"><%= @user.employee&.house_number || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Bairro</span>
            <span class="text-white text-sm"><%= @user.employee&.neighborhood || "—" %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500 text-sm">Cidade / UF</span>
            <span class="text-white text-sm"><%= [@user.employee&.city, @user.employee&.uf_live].compact.join(" / ").presence || "—" %></span>
          </div>
          <div class="flex flex-col gap-1 pt-3 border-t border-gray-700">
            <span class="text-gray-500 text-xs uppercase tracking-wider">Referência</span>
            <span class="text-white text-sm"><%= @user.employee&.reference || "—" %></span>
          </div>
        </div>
      </div>

      <%# Dados do Contrato %>
      <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6 lg:col-span-2">
        <p class="text-xs font-medium text-emerald-500 uppercase tracking-widest mb-4">Dados do Contrato</p>
        <% if @user.employee&.clt? %>
          <div class="grid grid-cols-2 gap-3">
            <div class="flex justify-between col-span-2 sm:col-span-1">
              <span class="text-gray-500 text-sm">Cargo</span>
              <span class="text-white text-sm"><%= @user.employee&.position || "—" %></span>
            </div>
            <div class="flex justify-between col-span-2 sm:col-span-1">
              <span class="text-gray-500 text-sm">Data de Admissão</span>
              <span class="text-white text-sm"><%= @user.employee&.admission_date&.strftime("%d/%m/%Y") || "—" %></span>
            </div>
            <div class="flex justify-between col-span-2 sm:col-span-1">
              <span class="text-gray-500 text-sm">Salário Base</span>
              <span class="text-white text-sm"><%= number_to_currency(@user.employee&.salary, unit: "R$") %></span>
            </div>
            <div class="flex justify-between col-span-2 sm:col-span-1">
              <span class="text-gray-500 text-sm">PIS/PASEP</span>
              <span class="text-white text-sm"><%= @user.employee&.pis || "—" %></span>
            </div>
            <div class="flex justify-between col-span-2 sm:col-span-1">
              <span class="text-gray-500 text-sm">CTPS</span>
              <span class="text-white text-sm"><%= @user.employee&.ctps || "—" %></span>
            </div>
          </div>
        <% elsif @user.employee&.freelancer? %>
          <div class="grid grid-cols-2 gap-3">
            <div class="flex justify-between col-span-2 sm:col-span-1">
              <span class="text-gray-500 text-sm">Valor por Hora</span>
              <span class="text-white text-sm"><%= number_to_currency(@user.employee&.hourly_rate, unit: "R$") %></span>
            </div>
            <div class="flex justify-between col-span-2 sm:col-span-1">
              <span class="text-gray-500 text-sm">CNPJ</span>
              <span class="text-white text-sm"><%= @user.employee&.cnpj.presence || "—" %></span>
            </div>
          </div>
        <% else %>
          <p class="text-gray-600 text-sm">Nenhum contrato cadastrado.</p>
        <% end %>
      </div>

    </div>
  </div>
</div>